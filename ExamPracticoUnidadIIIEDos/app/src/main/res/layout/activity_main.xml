<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.tecii.android.exampracticounidadiiiedos.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Cantidad"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/editCant" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nombre"
        android:ems="10"
        android:layout_below="@+id/editCant"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/editNom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Proveedor"
        android:ems="10"
        android:id="@+id/editProve"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/editNom"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Marca"
        android:ems="10"
        android:id="@+id/editMarca"
        android:layout_below="@+id/editProve"
        android:layout_alignEnd="@+id/buttonGu"
        android:layout_marginTop="17dp" />

    <Button
        android:text="Guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:id="@+id/buttonGu"
        android:layout_below="@+id/editMarca"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Precio Unitario"
        android:ems="10"
        android:id="@+id/editPre"
        android:layout_below="@+id/editMarca"
        android:layout_alignStart="@+id/editMarca"
        android:layout_marginTop="12dp" />
</RelativeLayout>
